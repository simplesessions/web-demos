---
import Layout from '../layouts/Layout.astro';

const demos = [
  { name: 'text-wrap: pretty', path: '/demos/text-wrap-pretty', desc: 'Prevent orphaned words at line breaks' },
  { name: 'Container Queries', path: '/demos/container-queries', desc: 'Layout adapts to container, not viewport' },
  { name: 'Line Clamp', path: '/demos/line-clamp', desc: 'Truncate text to 3 lines in cards' },
  { name: 'Fluid Typography', path: '/demos/fluid-typography', desc: 'clamp() + viewport vs container for headings' },
  { name: ':has() Selector', path: '/demos/has-selector', desc: 'Style parent based on children' },
  { name: 'Scroll Snap', path: '/demos/scroll-snap', desc: 'Carousel that snaps items' },
  { name: 'aspect-ratio & object-fit', path: '/demos/aspect-ratio', desc: 'Consistent image sizing' },
  { name: 'Image Compare', path: '/demos/image-compare', desc: 'Guess which image is optimized' },
  { name: 'Subgrid', path: '/demos/subgrid', desc: 'Child grid inherits parent columns' },
  { name: 'backdrop-filter & dialog', path: '/demos/backdrop-filter', desc: 'Modal with frosted backdrop' },
  { name: 'color-mix()', path: '/demos/color-mix', desc: 'Blend colors in CSS' },
  { name: 'Color Palette Generator', path: '/demos/color-palette', desc: 'Tailwind-like shades from a base color' },
  { name: 'Color States', path: '/demos/color-states', desc: 'Hover, active, focus with palette shades' },
  { name: 'Alt Text', path: '/demos/alt-text', desc: 'Good vs empty alt; screen reader preview' },
  { name: 'Image Formats', path: '/demos/image-formats', desc: 'When to use JPG, PNG, WebP, SVG' },
  { name: 'Spacing Scale', path: '/demos/spacing-scale', desc: 'Consistent spacing tokens for handoff' },
  { name: 'scroll-margin', path: '/demos/scroll-margin', desc: 'Offset for anchor links' },
  { name: 'Variable Font', path: '/demos/variable-font', desc: 'Roboto Flex with axis controls' },
  { name: 'View Transitions', path: '/demos/view-transitions', desc: 'Smooth page navigations' },
  { name: 'Sticky', path: '/demos/sticky', desc: 'Elements stick while scrolling' },
  { name: 'prefers-reduced-motion', path: '/demos/prefers-reduced-motion', desc: 'Respect motion preferences' },
  { name: 'Flex/Grid gap', path: '/demos/gap', desc: 'Spacing without margin' },
  { name: 'Intersection Observer', path: '/demos/intersection-observer', desc: 'Lazy load & scroll-triggered effects' },
  { name: 'Web Animations API', path: '/demos/web-animations', desc: 'Keyframe animations in JS' },
];
---
<Layout title="Web Tech Demos">
  <main class="min-h-screen bg-zinc-950 text-zinc-100">
    <div class="max-w-2xl mx-auto px-6 py-16">
      <h1 class="text-4xl font-semibold tracking-tight text-zinc-50 mb-2">
        Web Tech Demos
      </h1>
      <p class="text-zinc-400 mb-12">
        Quick examples for presentation. Pick one to explore.
      </p>
      <a
        href="/slides"
        class="mb-8 block rounded-xl border border-zinc-700 bg-zinc-900 px-6 py-4 text-zinc-200 hover:border-zinc-500 hover:bg-zinc-800 transition-colors"
      >
        <span class="font-medium">Slides presentation</span>
        <p class="text-sm text-zinc-500 mt-1">Product design presentation deck</p>
      </a>
      <nav class="space-y-4">
        {demos.map((demo) => (
          <a
            href={demo.path}
            class="block rounded-xl border border-zinc-800 bg-zinc-900/50 px-6 py-4 hover:border-zinc-600 hover:bg-zinc-800/50 transition-colors"
          >
            <span class="font-medium text-zinc-200">{demo.name}</span>
            <p class="text-sm text-zinc-500 mt-1">{demo.desc}</p>
          </a>
        ))}
      </nav>
    </div>
  </main>
</Layout>
